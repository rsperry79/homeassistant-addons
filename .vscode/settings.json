{
  "remote.SSH.remoteServerListenOnSocket": true,
  "cSpell.ignorePaths": [
    ".vscode",
    "~/.vscode-server/**/*"
  ],
  "cSpell.words": [
    "airprint",
    "avahi",
    "bashio",
    "bcast",
    "brlaser",
    "cdwcupswrapper",
    "cdwlpr",
    "cnijfilter",
    "codenotary",
    "colord",
    "contenv",
    "cupsd",
    "cupsik",
    "dbus",
    "deluser",
    "dpkg",
    "esbenp",
    "escpr",
    "Fontaine",
    "foomatic",
    "fullchain",
    "getent",
    "Grzegorz",
    "gutenprint",
    "hass",
    "hassio",
    "homeassistant",
    "hpcups",
    "hpijs",
    "hplip",
    "iface",
    "inotify",
    "inotifywait",
    "libcups",
    "libnss",
    "lpadmin",
    "mdns",
    "mkpasswd",
    "nofork",
    "NOPASSWD",
    "oneshot",
    "openprinting",
    "pipefail",
    "ppds",
    "Printcap",
    "privkey",
    "procps",
    "remroot",
    "rootfs",
    "shellcheck",
    "splix",
    "tempfs",
    "tempio",
    "timonwong",
    "tmpfs",
    "venv",
    "whois",
    "Zajac"
  ],
  "editor.defaultFormatter": "foxundermoon.shell-format",
  "editor.codeActionsOnSave": {
    "source.fixAll.shellcheck": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "formattingToggle.affects": [
    "editor.formatOnPaste",
    "editor.formatOnSave",
    "editor.formatOnType"
  ],
  "shellcheck.enable": true,
  "shellcheck.enableQuickFix": true,
  "shellcheck.run": "onSave",
  "shellcheck.executablePath": "", // Priority: user defined > bundled shellcheck binary > "shellcheck"
  "shellcheck.exclude": [],
  "shellcheck.customArgs": [],
  "shellcheck.ignorePatterns": {
    "**/*.csh": true,
    "**/*.cshrc": true,
    "**/*.fish": true,
    "**/*.login": true,
    "**/*.logout": true,
    "**/*.tcsh": true,
    "**/*.tcshrc": true,
    "**/*.xonshrc": true,
    "**/*.xsh": true,
    "**/*.zsh": true,
    "**/*.zshrc": true,
    "**/zshrc": true,
    "**/*.zprofile": true,
    "**/zprofile": true,
    "**/*.zlogin": true,
    "**/zlogin": true,
    "**/*.zlogout": true,
    "**/zlogout": true,
    "**/*.zshenv": true,
    "**/zshenv": true,
    "**/*.zsh-theme": true
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "terminal.integrated.sendKeybindingsToShell": true,
  "[shellscript]": {
    "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  }
}
