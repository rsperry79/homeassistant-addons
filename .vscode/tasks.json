{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Home Assistant",
            "type": "shell",
            "command": "supervisor_run",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Addon",
            "type": "shell",
            "command": "ha addons install \"local_${input:addonName}\"; ha addons start \"local_${input:addonName}\"; docker logs --follow \"addon_local_${input:addonName}\"",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "runOptions": {
                "reevaluateOnRerun": false
            }
        },
        {
            "label": "Start Addon",
            "type": "shell",
            "command": "ha addons stop \"local_${input:addonName}\"; ha addons start \"local_${input:addonName}\"; docker logs --follow \"addon_local_${input:addonName}\"",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "runOptions": {
                "reevaluateOnRerun": false
            }
        },
        {
            "label": "Rebuild and Start Addon",
            "type": "shell",
            "command": "ha addons rebuild \"local_${input:addonName}\"; ha addons start \"local_${input:addonName}\"; docker logs --follow \"addon_local_${input:addonName}\"",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild and Start Airprint",
            "type": "shell",
            "command": "ha addons rebuild \"local_airprint\"; ha addons start \"local_airprint\"; docker logs --follow \"addon_local_airprint\"",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "dependsOn": [
                "Start Home Assistant"
            ],
            "dependsOrder": "sequence"
        },
    ],
    "inputs": [
        {
            "id": "addonName",
            "type": "pickString",
            "description": "Name of addon (to add your addon to this list, please edit .vscode/tasks.json)",
            "options": [
                "airprint",
            ]
        }
    ]
}
